
{

  "manifest_version": 2,
  "name": "yt_ad_remover",
  "version": "3.0",

  "description": "skips youtube ads",

  "icons": {
    "48": "skip.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["overlay_ads.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://raw.githubusercontent.com/Readerlution/browser_extensions/main/yt_ad_remover/updates.json"
    }
  }
}
